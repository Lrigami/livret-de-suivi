{% extends 'base.html.twig' %}

{% block title %}Period index{% endblock %}

{% block body %}
    <h1>Period index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>Name</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for period in periods %}
            <tr>
                <td>{{ period.id }}</td>
                <td>{{ period.type }}</td>
                <td>{{ period.startDate ? period.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ period.endDate ? period.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ period.name }}</td>
                <td>{{ period.content }}</td>
                <td>
                    <a href="{{ path('app_period_show', {'id': period.id}) }}">show</a>
                    <a href="{{ path('app_period_edit', {'id': period.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_period_new') }}">Create new</a>
{% endblock %}
