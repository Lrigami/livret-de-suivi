{% extends 'base.html.twig' %}

{% block title %}Period{% endblock %}

{% block body %}
    <h1>Period</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ period.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ period.type }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ period.startDate ? period.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ period.endDate ? period.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ period.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ period.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_period_index') }}">back to list</a>

    <a href="{{ path('app_period_edit', {'id': period.id}) }}">edit</a>

    {{ include('period/_delete_form.html.twig') }}
{% endblock %}
